<%= form_for :search, method: :get, html: {class: 'navbar-search pull-left'} do |f| %>
  <%= text_field_tag(
    :q, params[:q],
    class: 'search-query span2', placeholder: t('label.search')
  ) %>

  <% request.query_parameters.except(:q).each do |k, v| %>
    <%= hidden_field_tag k, v %>
  <% end %>

  <%= submit_tag(
    '&#xe074;'.html_safe,
    class: 'btn btn-mini btn-inverse iconic', title: t('label.search'),
    data: { 'show-tooltip' => true, 'placement' => 'bottom' }
  ) %>
<% end %>
