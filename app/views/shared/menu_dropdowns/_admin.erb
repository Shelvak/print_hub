<% controllers = [
  'users', 'customers', 'bonuses', 'articles', 'payments', 'shifts',
  'print_job_types', 'customers_groups', 'shift_closures', 'notebooks',
  'print_queues'
] %>
<li class="dropdown<%= ' active' if controllers.include?(controller_name) %>">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <%= t('menu.admin') %>
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <% controllers.each do |name| %>
      <%= content_tag(
        :li,
        link_to(t('menu.' + name), [name.to_sym]),
        class: ('active' if controller_name == name)
      ) %>
    <% end %>

    <%= content_tag(:li, link_to(t('menu.stats'), printer_stats_path),
      class: ('active' if controller_name == 'stats')) %>
  </ul>
</li>
