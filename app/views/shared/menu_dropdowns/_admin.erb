<% controllers = [
  'users', 'customers', 'bonuses', 'payments', 'print_job_types', 'stats',
  'articles'
] %>
<li class="dropdown<%= ' active' if controllers.include?(controller_name) %>">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <%= t('menu.admin') %>
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <%= content_tag(:li, link_to(t('menu.users'), users_path),
      class: ('active' if controller_name == 'users')) %>
    <%= content_tag(:li, link_to(t('menu.customers'), customers_path),
      class: ('active' if controller_name == 'customers')) %>
    <%= content_tag(:li, link_to(t('menu.bonuses'), bonuses_path),
      class: ('active' if controller_name == 'bonuses')) %>
    <%= content_tag(:li, link_to(t('menu.articles'), articles_path),
      class: ('active' if controller_name == 'articles')) %>
    <%= content_tag(:li, link_to(t('menu.payments'), payments_path),
      class: ('active' if controller_name == 'payments')) %>
    <%= content_tag(:li, link_to(t('menu.stats'), printer_stats_path),
      class: ('active' if controller_name == 'stats')) %>
    <%= content_tag(:li, link_to(t('menu.shifts'), shifts_path),
      class: ('active' if controller_name == 'shifts')) %>
    <%= content_tag(
      :li, link_to(t('menu.print_job_types'), print_job_types_path),
      class: ('active' if controller_name == 'print_job_types')
    ) %>
    <%= content_tag(:li, link_to(t('menu.customers_groups'), customers_groups_path),
      class: ('active' if controller_name == 'customers_groups')) %>
  </ul>
</li>
